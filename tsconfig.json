{
  "include": [ "src/**/*" ],
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": [ "ES2015", "DOM" ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
